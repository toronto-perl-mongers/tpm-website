[% META page_name = 'Meeting Details' %]
[% META page_info = '' %]
<div id="page-content">

    <center>
    	<h1>[% meeting.details.datetime.strftime('%d %B %Y') %] - [% meeting.label %]
    
    	</h1>
    </center>
    
    <ul>
    	<li><b>Topic: </b>[% meeting.label %]</li>
    	<li><b>Venue: </b>[% meeting.details.venue %]</li>
    	<li><b>Time: </b>[% meeting.details.datetime.strftime('%H:%M') %]</li>
[% IF meeting.details.moderator %]
	    <li><b>Moderator: </b>[% meeting.details.moderator %]</li>
[% END %]
    </ul>
    
[% IF meeting.details.synopsis %]
	<p><b>Synopsis: </b>[% meeting.details.synopsis %]</p>
[% END %]

[% FOREACH talk IN meeting.talks %]
	<div>
		<p><b>[% talk.speaker %]</b></p>
		<p><b>[% talk.title %]</b></p>
		<p>[% talk.description %]</p>
	</div>
[% END %]

</div>
